<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/conner">

        <TextView
            android:layout_width="match_parent"
            android:paddingRight="30dp"
            android:layout_height="0dp"
            android:background="@null"
            android:text="0"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="40sp"
            tools:ignore="RtlCompat"
            android:id="@+id/inputTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@null"
            android:text="ket qua"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:paddingRight="30dp"
            tools:ignore="RtlCompat"
            android:id="@+id/resultTV"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="4px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="OFF"
                app:backgroundTint="#666666"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                android:background="@drawable/conner_button"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="MRC"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                app:backgroundTint="	#666666"
                android:textColor="@color/black"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="M-"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                app:backgroundTint="	#666666"
                android:textColor="@color/black"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="M+"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"></Button>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4px"

                android:layout_weight="1"
                android:background="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="4px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                app:backgroundTint="	#666666"
                android:textColor="@color/black"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="√"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/conner_button"
                android:text="MC"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"></Button>

            <Button
                android:layout_width="match_parent"
                android:background="@drawable/conner_button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="MR"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"></Button>

            <Button
                android:layout_width="match_parent"
                android:background="@drawable/conner_button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"
                android:onClick="chia"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="4px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:layout_marginLeft="4px"
                android:background="@drawable/conner_button"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/conner_button"
                android:text="7"
                android:layout_marginLeft="4px"
                app:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                android:onClick="seven"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/conner_button"
                android:textColor="@color/black"
                android:text="8"
                android:layout_marginLeft="4px"
                app:backgroundTint="#FFFFFF"
                android:onClick="eight"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="9"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                app:backgroundTint="#FFFFFF"
                android:onClick="nine"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="✖"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"
                android:onClick="nhan"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="4px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="♪"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/conner_button"
                android:textColor="@color/black"
                android:text="4"
                android:layout_marginLeft="4px"
                app:backgroundTint="#FFFFFF"
                android:onClick="four"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:layout_marginLeft="4px"
                android:background="@drawable/conner_button"
                android:textColor="@color/black"
                app:backgroundTint="#FFFFFF"
                android:onClick="five"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="#FFFFFF"
                android:onClick="six"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"
                android:onClick="tru"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_marginBottom="4px"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/conner_button"
                        android:text="CE"
                        android:layout_marginLeft="4px"
                        android:textColor="@color/black"
                        app:backgroundTint="#FF6600"
                        android:onClick="clear"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:background="@drawable/conner_button"
                        android:layout_marginLeft="4px"
                        android:textColor="@color/black"
                        app:backgroundTint="#FFFFFF"
                        android:onClick="one"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2"
                        android:layout_marginLeft="4px"
                        android:background="@drawable/conner_button"
                        android:textColor="@color/black"
                        app:backgroundTint="#FFFFFF"
                        android:onClick="two"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        android:background="@drawable/conner_button"
                        android:layout_marginLeft="4px"
                        android:textColor="@color/black"
                        app:backgroundTint="#FFFFFF"
                        android:onClick="three"></Button>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ON/C"
                        android:background="@drawable/conner_button"
                        android:layout_marginLeft="4px"
                        android:textColor="@color/black"
                        app:backgroundTint="#FF6600"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/conner_button"
                        android:text="0"
                        android:layout_marginLeft="4px"
                        android:textColor="@color/black"
                        app:backgroundTint="#FFFFFF"
                        android:onClick="zero"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/conner_button"
                        android:text="."
                        android:layout_marginLeft="4px"
                        android:textColor="@color/black"
                        app:backgroundTint="#FFFFFF"
                        ></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="="
                        android:background="@drawable/conner_button"
                        android:layout_marginLeft="4px"
                        android:textColor="@color/black"
                        app:backgroundTint="#FFFFFF"
                        android:onClick="bang"></Button>


                </LinearLayout>
            </LinearLayout>

            <Button

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="+"
                android:background="@drawable/conner_button"
                android:layout_marginLeft="4px"
                android:textColor="@color/black"
                app:backgroundTint="	#666666"
                android:onClick="cong"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
